<Window x:Class="TestManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TripiT Test Manager" Height="700" Width="1215" FontWeight="Bold" FontSize="14" WindowStyle="SingleBorderWindow" Name="winTestManager" Closed="winTestManager_Closed" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="White">
    <Grid>
        <TreeView HorizontalAlignment="Left" Margin="12,155,0,60" Name="treeView1" Width="264" SelectedItemChanged="treeView1_SelectedItemChanged" BorderThickness="0"/>
        <TabControl Height="544" HorizontalAlignment="Left" Margin="281,105,0,0" Name="tabControl1" VerticalAlignment="Top" Width="852" BorderThickness="0" SelectionChanged="tabControl1_SelectionChanged" Background="White">
            <TabItem Header="View" Name="tabItemView" DataContext="{Binding}" Background="White">
                <DataGrid AutoGenerateColumns="true" Height="471" Name="dataGrid1" Width="848" AutoGeneratedColumns="dataGrid1_AutoGeneratedColumns" HorizontalGridLinesBrush="#66000000" VerticalGridLinesBrush="#69000000" IsReadOnly="True" CanUserSortColumns="False" MouseDoubleClick="dataGrid1_MouseDoubleClick" BorderThickness="0" Background="White">
                </DataGrid>
            </TabItem>
            <TabItem Header="Edit" Name="tabItemEdit" Visibility="Collapsed" Background="White">
                <TabControl Name="tcScriptView" Visibility="Hidden">
                    <TabItem Header="main.tc" Name="tabMain" MouseDoubleClick="TabItem_MouseDoubleClick">
                     <TextBox Height="404" HorizontalAlignment="Left" Margin="6,15,0,0" Name="txtScriptEditor" VerticalAlignment="Top" Width="807" MouseDoubleClick="txtScriptEditor_MouseDoubleClick" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True" AcceptsTab="True" AcceptsReturn="True" DataContext="{Binding}" />
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
        <Menu Height="33" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="1214">
            <MenuItem Header="File" />
            <MenuItem Header="Edit" />
            <MenuItem Header="Connect">
                <MenuItem Header="Add New Connection" />
                <MenuItem Header="Connections">
                    <MenuItem Header="Prod Machine" />
                    <MenuItem Header="Phoenix Machine" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Fiddler" />
                <MenuItem Header="Oxygen" />
                <MenuItem Header="Jira" />
                <MenuItem Header="MyOwnTool" />
            </MenuItem>
            <MenuItem Header="Help" Click="MenuItem_Click" />
        </Menu>
        <Button Content="Run" Height="25" HorizontalAlignment="Right" Margin="0,102,76,0" Name="btnRunSave" VerticalAlignment="Top" Width="96" Click="btnRunSave_Click" Background="White" />
        <ProgressBar Height="24" HorizontalAlignment="Left" Margin="281,625,0,0" Name="prbStatus" VerticalAlignment="Top" Width="848" Background="#FFEFECEC" />
        <Label Height="36" HorizontalAlignment="Left" Margin="446,91,0,0" Name="lblTestName" VerticalAlignment="Top" Width="479" FontStyle="Italic" FontSize="18" />
        <ComboBox Height="21" HorizontalAlignment="Left" Margin="23,106,0,0" Name="cmbProjects" VerticalAlignment="Top" Width="229" SelectedIndex="0" FontSize="12" Background="White" SelectionChanged="cmbProjects_SelectionChanged" />
        <Label Content="Select Project" Height="28" HorizontalAlignment="Left" Margin="23,75,0,0" Name="label1" VerticalAlignment="Top" Width="143" />
        <Ellipse Height="10" HorizontalAlignment="Left" Margin="48,639,0,0" Name="ellipse1" Stroke="Black" VerticalAlignment="Top" Width="10" Fill="Green" />
        <Ellipse Height="10" HorizontalAlignment="Left" Margin="97,639,0,0" Name="ellipse2" Stroke="Black" VerticalAlignment="Top" Width="10" Fill="Yellow" />
        <Ellipse Height="10" HorizontalAlignment="Left" Margin="147,639,0,0" Name="ellipse3" Stroke="Black" VerticalAlignment="Top" Width="10" Fill="Red" />
        <Label Content="RIO" Height="28" HorizontalAlignment="Left" Margin="31,597,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="Maui" Height="28" HorizontalAlignment="Left" Margin="82,597,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content="Milan" Height="28" HorizontalAlignment="Left" Margin="133,597,0,0" Name="label4" VerticalAlignment="Top" />
    </Grid>
</Window>
