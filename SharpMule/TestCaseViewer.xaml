<Window x:Class="TestManager.TestCaseViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestCaseViewer" Height="591" Width="893" Closing="Window_Closing" WindowStyle="SingleBorderWindow">
    <Grid>
        <TabControl BorderThickness="0" Height="524" HorizontalAlignment="Left" Margin="10,16,0,0" Name="tcTestViewer" VerticalAlignment="Top" Width="852" SelectionChanged="tcTestViewer_SelectionChanged">
            <TabItem DataContext="{Binding}" Header="View" Name="tabItemView" FontSize="14" FontWeight="Bold">
                <DataGrid AutoGenerateColumns="true" BorderThickness="0" CanUserSortColumns="False" Height="478" HorizontalGridLinesBrush="#66000000" IsReadOnly="True" Name="dgTestViewer" VerticalGridLinesBrush="#69000000" Width="848" AutoGeneratedColumns="dgTestViewer_AutoGeneratedColumns" LoadingRow="dgTestViewer_LoadingRow" FontFamily="Consolas" />
            </TabItem>
            <TabItem Header="Edit" Name="tabItemEdit" Visibility="Hidden" FontSize="14" FontWeight="Bold">
                <TabControl Name="tcScriptView" Visibility="Visible" Height="489" Width="848">
                    <TabItem Header="main.tc" Name="tabMain" MouseDoubleClick="TabItem_MouseDoubleClick">
                        <avalonEdit:TextEditor xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit" Name="txtScriptEditor" FontFamily="Consolas" SyntaxHighlighting="C#" FontSize="10pt" Height="448" Width="832" />
                        <!--<TextBox Height="454" HorizontalAlignment="Left" Margin="6,15,0,0"  Name="txtScriptEditor" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="835" MouseDoubleClick="txtScriptEditor_MouseDoubleClick" AcceptsReturn="True" AcceptsTab="True" TextChanged="txtScriptEditor_TextChanged" />-->
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
        <Button Content="Run" Height="26" HorizontalAlignment="Left" Margin="778,19,0,0" Name="btnRunSave" VerticalAlignment="Top" Width="84" Click="btnRunSave_Click" />
        <Label Height="33" HorizontalAlignment="Left" Margin="157,16,0,0" Name="lblTestName" VerticalAlignment="Top" Width="531" FontSize="18" FontWeight="Bold" FontStyle="Italic" />
    </Grid>
</Window>
